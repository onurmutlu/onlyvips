# OnlyVips Backend API Standart .env Dosyası Örneği

# Secret yönetimi için çevresel değişkenleri kullan (varsayılan)
SECRET_PROVIDER=env

# API Ayarları
PORT=8000
API_VERSION=v1
NODE_ENV=development

# Veritabanı Ayarları
DATABASE_URL=mongodb://localhost:27017/onlyvips
DATABASE_PASSWORD=your_database_password

# JWT Yapılandırması
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=30d

# Telegram API Bilgileri
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Admin Kullanıcı Bilgileri
ADMIN_EMAIL=admin@onlyvips.com
ADMIN_PASSWORD=change_this_to_a_secure_password

# TON Blockchain Yapılandırması
TON_API_KEY=your_ton_api_key
TON_WALLET_ADDRESS=your_ton_wallet_address

# Dosya Yükleme Ayarları
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB

# OpenAI API Bilgileri
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo-instruct

# Log Ayarları
LOG_LEVEL=info 